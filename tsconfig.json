{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es5", "es6", "es7", "es2017",
      "esnext",
      "dom",
      "dom.iterable"
    ],
	  "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "rootDir": "src/lib",
    "outDir": "build/lib",
    "baseUrl": "src",
    "typeRoots": [ "./@types", "./node_modules/@types" ]
  },
  "include": [ "src/lib", "src/stories" ],
  "exclude": ["node_modules", "build", "scripts"]
}
